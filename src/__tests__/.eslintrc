{
    "env": {
        "jest": true
    },
    "globals": {
        "shallow": true,
        "mount": true,
        "render": true
    },
    "rules": {
        "import/no-extraneous-dependencies": [2, { "devDependencies": true }],
        "no-multi-assign": [0],

        "react/prefer-stateless-function": [0],
        "react/prop-types": [2, { "ignore": ["nodeRef"] }],
        "react/no-multi-comp": [0]
    }
}